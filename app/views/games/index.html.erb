<div class="min-h-screen bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">DMon</h1>
      <p class="text-xl text-gray-600">Turn your PDFs into adventures</p>
    </div>

    <!-- Quick Upload Section -->
    <div class="bg-white rounded-lg shadow-md p-8 mb-12">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h2 class="text-2xl font-bold text-gray-900">Quick Start</h2>
          <p class="text-gray-600 mt-1">Upload a PDF to get started</p>
        </div>
        <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
        </svg>
      </div>

      <%= form_with url: upload_games_path, method: :post, multipart: true, class: "space-y-4" do |f| %>
        <div class="flex items-center gap-4">
          <div class="flex-1">
            <%= file_field_tag :pdf_file, accept: '.pdf',
                class: "block w-full text-sm text-gray-500 file:mr-4 file:py-3 file:px-6 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer",
                id: "pdf-upload-input" %>
          </div>
          <%= submit_tag "Create Game",
              class: "bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors shadow-md hover:shadow-lg",
              id: "upload-submit-btn" %>
        </div>
        <p class="text-sm text-gray-500">
          Upload a PDF to automatically extract text, images, and create a searchable game archive
        </p>
      <% end %>
    </div>

    <!-- Example Games Section -->
    <% if @example_games.any? %>
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Example Games</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @example_games.each do |game| %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-2"><%= game.name || "Untitled Game" %></h3>
                <div class="text-sm text-gray-500 mb-4">
                  <p><%= pluralize(game.pdfs.count, 'PDF') %></p>
                  <p><%= pluralize(game.game_notes.count, 'Note') %></p>
                  <% if game.music_tracks.attached? %>
                    <p><%= pluralize(game.music_tracks.count, 'Track') %></p>
                  <% end %>
                </div>
                <div class="flex gap-2">
                  <%= link_to download_game_path(game),
                      class: "flex-1 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded font-medium text-sm transition-colors text-center" do %>
                    <div class="flex items-center justify-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                      </svg>
                      Download
                    </div>
                  <% end %>
                  <% if user_signed_in? %>
                    <%= link_to game_path(game),
                        class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-medium text-sm transition-colors text-center" do %>
                      View
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- User's Games Section (if logged in and has games) -->
    <% if user_signed_in? && defined?(@games) && @games&.any? %>
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Your Games</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @games.each do |game| %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-2"><%= game.name || "Untitled Game" %></h3>
                <div class="text-sm text-gray-500 mb-4">
                  <p><%= pluralize(game.pdfs.count, 'PDF') %></p>
                  <p><%= pluralize(game.game_notes.count, 'Note') %></p>
                  <% if game.music_tracks.attached? %>
                    <p><%= pluralize(game.music_tracks.count, 'Track') %></p>
                  <% end %>
                </div>
                <%= link_to game_path(game),
                    class: "block w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-medium text-sm transition-colors text-center" do %>
                  Open Game
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const uploadInput = document.getElementById('pdf-upload-input');
    const submitBtn = document.getElementById('upload-submit-btn');
    const form = submitBtn.closest('form');

    // Check if user is logged in (server-side check)
    const isLoggedIn = <%= user_signed_in? ? 'true' : 'false' %>;

    form.addEventListener('submit', function(e) {
      if (!isLoggedIn) {
        e.preventDefault();
        alert('Please sign in to upload PDFs');
        window.location.href = '<%= login_path %>';
      } else if (!uploadInput.files || uploadInput.files.length === 0) {
        e.preventDefault();
        alert('Please select a PDF file');
      }
    });
  });
</script>
