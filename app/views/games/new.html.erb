<div class="max-w-2xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Create New Game</h1>

  <%= form_with(model: @game, local: true, class: "space-y-6") do |form| %>
    <% if @game.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h2 class="font-bold mb-2"><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-2">
      <%= form.label :pdf, "Upload PDF", class: "block text-sm font-medium text-gray-700" %>
      <div class="relative">
        <%= form.file_field :pdf, accept: "application/pdf", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-blue-500 file:text-white hover:file:bg-blue-600 file:cursor-pointer border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
    </div>

    <div class="flex gap-4">
      <%= form.submit "Create Game", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
      <%= link_to "Cancel", root_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
