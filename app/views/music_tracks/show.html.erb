<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg p-8">
      <h1 class="text-3xl font-bold mb-6 text-gray-800"><%= @music_track.filename %></h1>

      <div class="mb-6">
        <audio controls class="w-full">
          <source src="<%= rails_blob_path(@music_track) %>" type="<%= @music_track.content_type %>">
          Your browser does not support the audio element.
        </audio>
      </div>

      <div class="space-y-4">
        <div class="text-sm text-gray-600">
          <p><strong>File size:</strong> <%= number_to_human_size(@music_track.byte_size) %></p>
          <p><strong>Uploaded:</strong> <%= @music_track.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>

        <div class="flex gap-4">
          <%= link_to "Back to Game", game_path(@game), class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
          <%= button_to "Delete Track", game_music_track_path(@game, @music_track),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this track?" },
                class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600" %>
        </div>
      </div>
    </div>
  </div>
</div>
